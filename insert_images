import pyodbc
import sys
import os

connection_string = os.environ['AZURE_SQL_CONNECTION_STRING']
image_path = sys.argv[1]  # Ví dụ: "image1.jpg"
description = "Mô tả ảnh"

with open(image_path, 'rb') as f:
    image_bytes = f.read()

conn = pyodbc.connect(connection_string)
cursor = conn.cursor()
sql = "INSERT INTO Pictures (Photo, Description) VALUES (?, ?)"
cursor.execute(sql, (image_bytes, description))
conn.commit()
print("Ảnh đã được insert thành công!")
